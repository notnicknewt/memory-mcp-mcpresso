# Database connection (provided by Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT secret for OAuth tokens (auto-generated if not set)
JWT_SECRET=your-secret-key-here

# Server URL (set to your Railway deployment URL)
SERVER_URL=https://your-app.up.railway.app

# Port (Railway sets this automatically)
PORT=3000

# Environment
NODE_ENV=production
